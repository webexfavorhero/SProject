{{partial "partials/banner-about"}}

{{partial "partials/sub-header"}}

<!-- SECTION ABOUT-INTRODUCE BEGIN -->
<section id="about-introduce" class="content-section content-aboutintroduce clearfix">
  <div class="container">

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        {{#each model.weAreSciensa as |sciensa|}}
        <header class="content-header">
          <img src="assets/images/title-wearesciensa.png" alt="" class="icon-content-header" width="186">
          <h2 class="title-content">{{sciensa.title}}</h2>
        </header>

        <p class="text-content-section">{{sciensa.description}}</p>
        {{/each}}
      </div>
    </div><!-- / .row -->

  </div>
</section>
<!-- SECTION ABOUT-INTRODUCE END -->

<!-- SECTION ABOUT-MISSION BEGIN -->
<section id="about-mission" class="content-section bg-gradient-purpleblue content-aboutmission clearfix">
  <div class="container">

    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        {{#each model.mission as |miss|}}
        <header class="content-header">
          <h2 class="title-content wow fadeInUp" data-wow-duration="1s" data-wow-delay="200ms">{{miss.title}}</h2>
        </header>

        <p class="text-content-section wow fadeInUp" style="max-width: 855px; font-size: 24px;" data-wow-duration="1s" data-wow-delay="200ms">{{miss.description}}</p>
        {{/each}}
      </div>
    </div><!-- / .row -->

    <div class="clearfix"></div>
    <div class="space100"></div>

    <div class="row aboutmission-container">

      <div class="col-md-3 item-mission clearfix wow fadeInUp" data-wow-duration="1s" data-wow-delay="200ms">
        <div class="subitem-mission">
          <img src="assets/images/mission/1.png" alt="" width="125">
          <h3><a href="#">the process step one</a></h3>
        </div>
      </div><!-- / .item-mission -->

      <div class="col-md-3 item-mission clearfix wow fadeInUp" data-wow-duration="1s" data-wow-delay="200ms">
        <div class="subitem-mission">
          <img src="assets/images/mission/2.png" alt="" width="125">
          <h3><a href="#">the process step one</a></h3>
        </div>
      </div><!-- / .item-mission -->

      <div class="col-md-3 item-mission clearfix wow fadeInUp" data-wow-duration="1s" data-wow-delay="200ms">
        <div class="subitem-mission">
          <img src="assets/images/mission/3.png" alt="" width="125">
          <h3><a href="#">the process step one</a></h3>
        </div>
      </div><!-- / .item-mission -->

      <div class="col-md-3 item-mission no-arrow clearfix wow fadeInUp" data-wow-duration="1s" data-wow-delay="200ms">
        <div class="subitem-mission">
          <img src="assets/images/mission/4.png" alt="" width="125">
          <h3><a href="#">the process step one</a></h3>
        </div>
      </div><!-- / .item-mission -->

    </div><!-- / .aboutmission-container -->

  </div>
</section>
<!-- SECTION MISSION END -->

<!-- SECTION ABOUT-CULTURE BEGIN -->
<section id="about-culture" class="content-section content-aboutculture clearfix">
  <div class="container">

    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        {{#each model.ourCulture as |cult|}}
        <header class="content-header">
          <h2 class="title-content wow fadeInUp" data-wow-duration="1s" data-wow-delay="200ms">{{cult.title}}</h2>
        </header>

        <p class="text-content-section wow fadeInUp" data-wow-duration="1s" data-wow-delay="200ms" style="min-width: 650px;">{{cult.description}}</p>
        {{/each}}
      </div>
    </div>

    <div class="clearfix"></div>
    <div class="space100"></div>

    <div class="row aboutculture-container">

      <div class="col-md-3 item-culture clearfix wow fadeInUp" data-wow-duration="1s" data-wow-delay="200ms">
        <div class="subitem-culture">
          <figure>
            <img src="assets/images/culture/1.png" alt="">
          </figure>
        </div>
      </div><!-- / .item-culture -->

      <div class="col-md-3 item-culture clearfix wow fadeInUp" data-wow-duration="1s" data-wow-delay="200ms">
        <div class="subitem-culture">
          <figure>
            <img src="assets/images/culture/2.png" alt="">
          </figure>
        </div>
      </div><!-- / .item-culture -->

      <div class="col-md-3 item-culture clearfix wow fadeInUp" data-wow-duration="1s" data-wow-delay="200ms">
        <div class="subitem-culture">
          <figure>
            <img src="assets/images/culture/3.png" alt="">
          </figure>
        </div>
      </div><!-- / .item-culture -->

      <div class="col-md-3 item-culture clearfix wow fadeInUp" data-wow-duration="1s" data-wow-delay="200ms">
        <div class="subitem-culture">
          <figure>
            <img src="assets/images/culture/4.png" alt="">
          </figure>
        </div>
      </div><!-- / .item-culture -->

    </div><!-- / .culture-container -->

  </div>
</section>
<!-- SECTION CULTURE END -->

<!-- SECTION ABOUT-OFFICE BEGIN -->
{{#each model.ourOffice as |off|}}
